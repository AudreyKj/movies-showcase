{
  "name": "ssr-hot-reloading",
  "version": "1.0.0",
  "description": "Movies Showcase isomorphic web app made with React",
  "license": "MIT",
  "author": "Audrey Kadjar",
  "scripts": {
    "lint": "eslint --fix --ext .js,.jsx",
    "start": "NODE_ENV=development nodemon src/server/index.js",
    "watch": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "dev": "concurrently --kill-others \"npm run watch\" \"npm run start\""
